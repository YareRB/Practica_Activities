<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_description">

    <ImageView
        android:id="@+id/imgObjectD"
        android:layout_width="307dp"
        android:layout_height="427dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cerdo" />

    <ImageView
        android:id="@+id/imgFavorite"
        android:layout_width="84dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_no_favorite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvDescription"
        app:layout_constraintVertical_bias="0.305" />

    <TextView
        android:id="@+id/txvDescription"
        android:layout_width="314dp"
        android:layout_height="89dp"
        android:layout_marginTop="40dp"
        android:text="@string/text_description"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgObjectD" />

</androidx.constraintlayout.widget.ConstraintLayout>